{% extends 'base.html.twig' %}

{% block title %}Genre index{% endblock %}

{% block body %}

    <div class="jumbotron jumbotron-fluid text-center text-balck" style="background-color: #dce1f3;">
        <div class="container">
            <h1 class="display-4">Bienvenue sur Bookland</h1>
            <p class="lead">Vous trouverez ici la liste des genres, livres et leurs acteurs proposés par notre bibliotheque.</p>
        </div>
       
    </div>
    <div class="container text-center mt-5">
            <h1 class="display-4 mb-5">Genre</h1>
            <div class="row">
                
                   
                
               {% for genre in genres %}
              
                <div class="col-md-4 mb-5">
                    <div class="card">
                        <div class="card-body"> 
                            <h5 class="card-title">{{ genre.nom }}</h5>
                           
                            
                            <a href="{{ path('genre_show', {'id': genre.id}) }}"class="btn btn-success">➕ details...</a>
                            
                        
                           {{ include('bookland/genre/_delete_form.html.twig') }}
                            
                            
                        </div>
                    </div>
                </div>
                {% endfor %}
                
            
            <div class="col-md-4">
            
                <div class="card-body text-center">
                    <h5 class="card-title">Create New</h5>
                    <a href="{{ path('genre_new')  }}" class="btn btn-success">➕</a>
                </div>
            
            </div>
           
    </div>
{% endblock %}
