{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
   <div class="jumbotron jumbotron-fluid text-center text-balck" style="background-color: #dce1f3;">
            <div class="container">
                <h1 class="display-4">Bienvenue sur Bookland</h1>
                <p class="lead">Vous trouverez ici la liste des genres, livres et leurs acteurs propos√©s par notre bibliotheque.</p>
            </div>
        
    </div>
    
    <div class="container text-center mt-5">
        <h1 class="display-4 mb-5">Show</h1>
        
            <div class=" mb-5">
                <div class="card">
                    <div class="card-body"> 
                        <h4 class="card-title">livre {{ livre.titre }}</h4>
                                <h6 class="card-subtitle mb-4 text-muted">
                    
                                    Isbn:{{ livre.isbn }}<br>
                                
                                    Titre: {{ livre.titre }}<br>
                                
                                    Nbpages: {{ livre.nbpages }}<br>
                                
                                    DateParution: {{ livre.DateParution ? livre.DateParution|date('Y-m-d') : '' }}<br>

                                    Note: {{ livre.note }}<br>
                                    
                                    Genre:
                                    {% for livre in livre.livregenre %}
                                        {{ livre.nom}}
                    
                                    {% endfor %}<br>
                                    Auteurs:
                                    {% for livre in livre.livreauteur %}
                                        {{ livre.NomPrenom}}
                    
                                    {% endfor %}<br>
                                    </h6>
                   
                        <a href="{{ path('livre_index') }}"class ="btn btn-info">back to list</a>

                        <a href="{{ path('livre_edit', {'id': livre.id}) }}" class="btn btn-danger ">edit</a>


                        {{ include('bookland/livre/_delete_form.html.twig') }}    
                    </div>
                </div>
            </div>
{% endblock %}
